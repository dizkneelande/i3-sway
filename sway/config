
## -- nell's sway config ---- ##

## -- modkey ---- ##
set $mod Mod4

## -- font ---- ##
font pango:Jetbrains Mono 10

## -- startup ---- ##
output DP-4 resolution 1920x1080 position 0,0
output DP-5 resolution 1920x1080 position 1920,0
output eDP-1 resolution 1920x1080 position 3840,0
output * bg ~/Pictures/Tropical-sunset.png fill
exec_always dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
exec --no-startup-id nm-applet --indicator
exec /usr/lib/xfce-polkit/xfce-polkit
#exec_always --no-startup-id xrandr --output DP-2-2 --auto
#exec_always --no-startup-id xrandr --output DP-2-3 --auto
#exec_always --no-startup-id xrandr --output eDP-1 --auto --right-of DP-2-3
exec dunst
exec_always picom
exec_always autotiling
exec_always gammastep -O 3500
exec_always blueman-applet

## -- disable caps lock ---- ##
input type:keyboard {
  xkb_options ctrl:nocaps
}
input type:pointer {
  accel_profile "flat"
  pointer_accel 1.0
}
input type:touchpad {
  events disabled
}

## -- clamshell mode ---- ##

#bindswitch --reload --locked lid:on output eDP-1 disable 
#bindswitch --reload --locked lid:off output eDP-1 enable
exec_always /home/nell/.config/sway/scripts/clamshell.sh
# manual toggle
#bindsym $mod+o exec swaymsg output eDP-1 enable
#bindsym $mod+Shift+o exec swaymsg output eDP-1 disable

## -- brightness and audio ---- ## 
bindsym XF86MonBrightnessUp exec brightnessctl set +5%
bindsym $mod+Shift+bracketright exec brightnessctl set +5%
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym $mod+Shift+bracketleft exec brightnessctl set 5%-
bindsym XF86AudioRaiseVolume exec pamixer -i 5
bindsym $mod+bracketright exec pamixer -i 5
bindsym XF86AudioLowerVolume exec pamixer -d 5
bindsym $mod+bracketleft exec pamixer -d 5

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

## -- keybindings ---- ##
bindsym $mod+Return exec xfce4-terminal 
bindsym $mod+Shift+w exec brave 
bindsym $mod+Shift+f exec thunar

## -- screenshot ---- ##
bindsym $mod+p exec slurp | grim -g - $(xdg-user-dir PICTURES)/$(date +'screenshot_%Y-%m-%d-%H%M%S.png')

## -- scratchpad ---- ##
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

## -- study video ---- ##
bindsym $mod+Shift+m exec mpv https://www.youtube.com/watch?v=iJpohLFFO6U

# kill focused window
bindsym $mod+Shift+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+space floating toggle

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

## -- resize ---- ##
bindsym $mod+Control+h resize shrink width 10px
bindsym $mod+Control+j resize grow height 10px
bindsym $mod+Control+k resize shrink height 10px
bindsym $mod+Control+l resize grow width 10px

bindsym $mod+Control+Left resize shrink width 10px
bindsym $mod+Control+Down resize grow height 10px
bindsym $mod+Control+Up resize shrink height 10px
bindsym $mod+Control+Right resize grow width 10px

## -- gaps ---- ##
default_border pixel 2
default_floating_border pixel 2
gaps inner 6

## -- colours ---- ##
# class                 border  bground text    indicator child_border
client.focused          #E5C890 #282828 #EBDBB2 #E5C890   #E5C890
client.focused_inactive #333333 #5F676A #EBDBB2 #484E50   #5F676A
client.unfocused        #333333 #222222 #888888 #292D2E   #222222
client.urgent           #2F343A #E78284 #EBDBB2 #E78284   #E78284
client.placeholder      #000000 #0C0C0C #EBDBB2 #000000   #0C0C0C

client.background       #EBDBB2

bar {
	status_command i3status
	mode hide
	modifier $mod+Shift+Control
  	colors {
    		background #282828
    		statusline #EBDBB2
    		separator  #666666

    		focused_workspace  #E5C890 #282828 #EBDBB2
    		active_workspace   #333333 #282828 #EBDBB2
    		inactive_workspace #333333 #282828 #888888
    		urgent_workspace   #2F343A #E78284 #EBDBB2
    		binding_mode       #2F343A #E78284 #EBDBB2
  	       }
}

bindsym $mod+d exec "dmenu_run -nf '#EBDBB2' -nb '#282828' -sb '#EBDBB2' -sf '#282828' -fn 'Jetbrains Mono-10' -p 'dmenu prompt &gt;'"

## -- window rules ---- ##

for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable
